- content_for(:head) do
  =stylesheet_link_tag 'application', params[:controller], 'forms'
=link_to "Manage Locations", places_path

%h1 
  Location: 
  =@place.name 
=form_for @place do |f|
  %ul.form-fields
    %li
      =f.label 'name', 'Location/Center Name', :class=>'left-col'
      =f.text_field 'name'
    %li
      =f.label 'map_coordinates', :class=>'left-col'
      =f.text_field 'map_coordinates'
    %li
      =f.label 'description', :class=>'left-col'
      =f.text_area  'description'
    %li
      -unless params[:program].nil? 
        =hidden_field_tag 'program', params[:program]
      =f.submit

