%tr
  %td
    - unless ptf.object.text.tibetan_title.nil?
      =link_to ptf.object.text.tibetan_title, text_path(ptf.object.text), :class=>"tibetan"
      %br
    =link_to ptf.object.text.english_title, text_path(ptf.object.text)

  %td=ptf.object.text.author.tibetan_name if ptf.object.text.author
  %td
  %td
    =ptf.select :nature, {'root text'=>'root', 'commentary text' =>'commentary'}
  %td
    =ptf.text_field :chapter, :class=>'chapter'
  %td
    =ptf.text_field :sections, :class=>'sections'
  %td
    =ptf.text_field :pages, :class=>'pages'
  %td
    =link_to "remove association", remove_program_text_program_path(ptf.object.pid), :method=>:delete


