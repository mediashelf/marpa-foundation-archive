- document = document.nil? ? table_result : document
%tr[document]
  %td.instantiation_identifier
    =link_to document["instantiation_identifier_t"], recording_instantiation_path(document["id"])
  %td.format
    -unless document["iana_format_t"].nil?
      =Marpa::MarpaCore.iana_mime_types[ document["iana_format_t"].first ]
  %td.uploaded_by
  %td.workflow_status
    =document["workflow_status_t"]
  %td.location
    =document["location_t"]
  %td.delete
    =link_to "delete", recording_instantiation_path(document["id"]), :method=>:delete, :class=>"action destroy"
