%tr
  %td
    - unless ttf.object.text.tibetan_title.nil?
      =link_to ttf.object.text.tibetan_title, text_path(ttf.object.text), :class=>"tibetan"
      %br
    =link_to ttf.object.text.english_title, text_path(ttf.object.text)
  %td=ttf.object.text.author.tibetian_name if ttf.object.text.author
  %td
  %td
    =ttf.select :nature, {'root text'=>'root', 'commentary text' =>'commentary'}
  %td
    =ttf.text_field :chapter, :class=>'chapter'
  %td
    =ttf.text_field :sections, :class=>'sections'
  %td
    =ttf.text_field :pages, :class=>'pages'
  %td
    =link_to "remove association", remove_talk_text_talk_path(ttf.object.pid), :method=>:delete



