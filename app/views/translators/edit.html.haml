-content_for :head do
  =stylesheet_link_tag params[:controller], 'forms'

=link_to "Manage Translators", translators_path
  
=form_for @translator do |f|
  %fieldset
    %legend="Translator: #{@translator.tibetan_name}"
    .control-group
      =f.label 'tibetan_name', 'Name', :class=>'left-col'
      =f.text_field 'tibetan_name'
    .form-actions 
      =hidden_field_tag 'program', params[:program]
      =f.submit :class=>"btn btn-primary"

