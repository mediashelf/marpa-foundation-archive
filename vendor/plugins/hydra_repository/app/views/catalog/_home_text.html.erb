<div id="results">
	
	<%= render :partial=>'search_form' %>
	
	<div class="home_text">
		<h1>Welcome to LIBRA</h1>
		<h2>The online archive of UVa scholarship</h2>
    <p>LIBRA makes publications available to the world and
    provides safe and secure storage for the scholarly output of the
    UVa community.</p>
	</div>
	
	<div class="home_buttons">
	
	<%= link_to image_tag('learn_more_lrg_btn.png', :alt => "Learn more"), "/about", {:class => "learn_more"} %>
	
	  <div class="add_work">
		<%= image_tag('add_your_work_lrg_btn.png', {:id => 'add_work_image', :alt => "Add your work"})%>
	    <ul class="add_sub_menu">
	      <% if current_user %>
	        <li onclick="javascript:createAssetNavigateTo(this, '<%= url_for(:action => "new", :controller => "assets", :content_type => "hydrangea_article") %>');">Add an article</li>
	        <li onclick="javascript:createAssetNavigateTo(this, '<%= url_for(:action => "new", :controller => "assets", :content_type => "hydrangea_book") %>');">Add a book</li>
        <% else %>
          <li onclick="javascript:location.href='<%= url_for(:action => "new", :controller => "user_sessions", :redirect_params => {:action => "new", :controller=> "assets", :content_type => "hydrangea_article"}) %>'">Add an article</li>
          <li onclick="javascript:location.href='<%= url_for(:action => "new", :controller => "user_sessions", :redirect_params => {:action => "new", :controller=> "assets", :content_type => "hydrangea_book"}) %>'">Add a book</li>
        <% end %>
	    </ul>
	  </div>
	
	</div>

  <% # container for facets -%>
  <%-
    case params[:home_context]
    when "authors"
      facet_name = 'person_full_name_cid_facet'
    when "journals"
      facet_name = 'mods_journal_title_info_facet'
    else
      facet_name = 'person_full_name_cid_facet'
    end
    -%>
    <% display_facet = @response.facets.detect {|f| f.name == facet_name } -%>
    <% if display_facet &&  display_facet.items.length > 0 %>
      <div id="authors" >
        <%-
          get_randomized_display_items(display_facet.items).slice(0..5).each_with_index do |item,index| 
        -%>
          <% if index % 3 == 0 %>
            <div class="author_browse_row">
          <% end %>
            <div class="author_browse_image">
              <% if facet_name == 'person_full_name_cid_facet' %>
                <%= render_complex_facet_image(facet_name, item) %><br/>
                <%= render_complex_facet_value(facet_name, item) %>
              <% else %>
                <%= render_journal_image(facet_name, item) %><br/>
                <%= render_journal_facet_value(facet_name, item) %>
              <% end %>
            </div>
          <% if index == 2 %>
            </div><!-- end author browse row -->
          <% end %>
          <% break if index == 5 %>
        <% end %>
        </div><!-- END author browse row -->
    <% end %>
      </div><!-- END authors div -->	

</div>
