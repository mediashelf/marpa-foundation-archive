				<div class="libra_buttons">
					<% unless request.request_uri.match(/\/(\?)?(total=[0-9]+)?$|\/catalog(\?)?$/) %>
		            	<%= link_to image_tag('learn_more_small_btn.png', :alt => "Learn more"), '/about', {:class => "learn_more"} %>			
						<%= render :partial => '/user_util_links.html' %>
