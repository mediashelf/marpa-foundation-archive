<% grant = show %>
<% grant_counter = show_counter %>

<% base_id = "grant_#{grant_counter}" %>

<dl class="grant" id="<%= base_id %>">
	<dt></dt>
	<dd class="multi_inline grant">
		<ul>
		  <% unless get_values_from_datastream(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :organization]).first.empty? %>		
		  <li class="grant_agency">
		    <%= fedora_field_label("hydraDataset", [{:grant=>grant_counter}, :organization], "Granting agency") %>
		    <%= get_values_from_datastream(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :organization]) %>
		  </li>
			<% end %>
			
		  <% unless get_values_from_datastream(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :number]).first.empty? %>
		  <li class="grant_number">
			<%= fedora_field_label("hydraDataset", [{:grant=>grant_counter}, :number], "Grant number") %>
		    <%= get_values_from_datastream(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :number]) %>
		  </li>
		  <% end %>
		</ul>
	</dd>
</dl>
