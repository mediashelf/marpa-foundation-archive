<dl>
  <dt>
    <%= fedora_field_label("hydraDataset", [:contact_name], "Contact:") %>
  </dt>
  <dd class="contact_name">
    <%= fedora_text_field(@document_fedora,"hydraDataset", [:contact_name], :multiple=>false) %>
  </dd>
  <dt>
    <%= fedora_field_label("hydraDataset", [:contact_email], "Email:") %>
  </dt>
  <dd class="contact_email">
    <%= fedora_text_field(@document_fedora,"hydraDataset", [:contact_email], :multiple=>false) %>
  </dd>
  <dt>
    <%= fedora_field_label("descMetadata", [:subject, :topic], "Topic(s):") %>
    <%= fedora_text_field_insert_link "descMetadata", [:subject, :topic] %>
  </dt>
  <dd id="topic_tag" class="topic_tag">
    <%= fedora_text_field(@document_fedora,"descMetadata", [:subject, :topic], :multiple=>true) %>
  </dd>
  
  <dt>
    <label>Grant(s):</label>
  	<%= fedora_text_field_insert_link "hydraDataset", [:grant] %>  
  </dt>
  <dd class="multi_inline grant" id="grants">	
	<%= render :partial=>"grants/edit", :collection=>@document_fedora.datastreams_in_memory["hydraDataset"].find_by_terms(:grant) %>			
  </dd>

  <dt>
    <%= fedora_field_label("hydraDataset", [:data_quality], "Notes about data quality:") %>
  </dt>
  <dd class="data_quality">
    <%= fedora_text_area(@document_fedora,"hydraDataset", [:data_quality], :multiple=>false) %>
  </dd>

</dl>
