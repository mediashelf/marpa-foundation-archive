<fieldset id="additional_info">
<legend>Additional Info</legend>
<dl>
 <% unless get_values_from_datastream(@document_fedora,"hydraDataset", [:contact_name]).first.empty? %>
   <dt>
     <%= fedora_field_label("hydraDataset", [:contact_name], "Contact:") %>
   </dt>
   <dd class="contact_name">
     <%= get_values_from_datastream(@document_fedora,"hydraDataset", [:contact_name]) %>
   </dd>
	<% end %>
	
 <% unless get_values_from_datastream(@document_fedora,"hydraDataset", [:contact_email]).first.empty? %>
   <dt>
     <%= fedora_field_label("hydraDataset", [:contact_email], "Email:") %>
   </dt>
   <dd class="contact_email">
     <%= get_values_from_datastream(@document_fedora,"hydraDataset", [:contact_email]) %>
   </dd>
	<% end %>
	
 <% unless get_values_from_datastream(@document_fedora,"descMetadata", [:subject, :topic]).first.empty? %>
   <dt>
     <%= fedora_field_label("descMetadata", [:subject, :topic], "Topic Tags:") %>
   </dt>
   <dd class="keywords">
     <%= get_values_from_datastream(@document_fedora,"descMetadata", [:subject, :topic]).join(', ') %>
   </dd>
<% end %>

<% unless get_values_from_datastream(@document_fedora,"hydraDataset", [{:grant=>0}, :organization]).first.empty? && get_values_from_datastream(@document_fedora,"hydraDataset", [{:grant=>0}, :number]).first.empty? %> 
 <dt> 
  <label>Grant(s)</label>
 </dt>
 <dd class="multi_inline grant">
 	<%= render :partial=>"grants/show", :collection=>@document_fedora.datastreams_in_memory["hydraDataset"].find_by_terms(:grant) %>
 </dd>
 <% end %>

	<% unless get_values_from_datastream(@document_fedora,"hydraDataset", [:data_quality]).first.empty? %>
   <dt>
     <%= fedora_field_label("hydraDataset", [:data_quality], "Notes about data quality:") %>
   </dt>
   <dd class="data_quality">
     <%= get_values_from_datastream(@document_fedora,"hydraDataset", [:data_quality]) %>
   </dd>
	<% end %>
</dl>
</fieldset>